<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent"

    >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_favourite_category_image"
        android:layout_width="@dimen/dimen_88dp"
        android:layout_height="@dimen/dimen_88dp"
        android:src="@drawable/asset5"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MySmoothieSample.CircleImageView"
        />
    <TextView
        android:id="@+id/home_favourite_category_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_24dp"
        android:text="Short mantras"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/gray_900"
        android:textAppearance="@style/TextAppearance.MySmoothieSample.Headline3"
        />
</LinearLayout>
</layout>