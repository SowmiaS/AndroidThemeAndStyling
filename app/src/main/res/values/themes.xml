<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MySmoothieSample" parent="Theme.MySmoothieSample.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rust_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="background">@color/taupe_100</item>
        <item name="colorOnBackground">@color/taupe_800</item>

        <item name="colorSurface">@color/white_850</item>
        <item name="colorOnSurface">@color/gray_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="login_background">@drawable/bg_light_login</item>
        <item name="welcome_background">@drawable/bg_light_welcome</item>
        <item name="logo">@drawable/ic_light_logo</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MySmoothieSample.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="android:windowBackground">?background</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MySmoothieSample.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MySmoothieSample.MediumComponent</item>

        <!-- Text Appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MySmoothieSample.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MySmoothieSample.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MySmoothieSample.Headline3</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MySmoothieSample.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.MySmoothieSample.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MySmoothieSample.Caption</item>
        <!-- Text Appearance -->

        <!-- Widgets -->
        <item name="materialButtonStyle">@style/Widget.MySmoothieSample.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.MySmoothieSample.BottomNavigationView</item>
        <item name="textInputLayoutFocusedRectEnabled">@style/Widget.MySmoothieSample.TextInputLayout</item>
        <item name="textInputStyle">@style/Widget.MySmoothieSample.TextInputLayout</item>

        <!-- Widgets -->
    </style>

    <style name="Widget.MySmoothieSample.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MySmoothieSample.Button</item>
    </style>

    <style name="Widget.MySmoothieSample.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/dimen_14dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_14dp</item>
    </style>


    <style name="Widget.MySmoothieSample.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
    </style>


    <style name="TextAppearance.MySmoothieSample.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/dimen_28dp</item>
        <item name="fontFamily">@font/kulimpark_light</item>
    </style>
    <style name="TextAppearance.MySmoothieSample.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="fontFamily">@font/kulimpark_regular</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TextAppearance.MySmoothieSample.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
    <style name="TextAppearance.MySmoothieSample.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
    <style name="TextAppearance.MySmoothieSample.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="TextAppearance.MySmoothieSample.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="fontFamily">@font/kulimpark_regular</item>
        <item name="textAllCaps">true</item>
    </style>




</resources>